{
  "name": "@wrtnlabs/calculator-mcp",
  "type": "module",
  "version": "0.1.3",
  "packageManager": "pnpm@10.6.4",
  "description": "Calculator MCP",
  "repository": {
    "type": "git",
    "url": "https://github.com/wrtnlabs/calculator-mcp"
  },
  "bugs": {
    "url": "https://github.com/wrtnlabs/calculator-mcp/issues"
  },
  "main": "dist/index.mjs",
  "bin": "bin/index.js",
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "dist",
    "package.json"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "build": "unbuild",
    "publint": "publint",
    "prepack": "pnpm build",
    "release": "pnpm lint && pnpm prepack && publint && pnpm dlx bumpp"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@types/node": "^20.14.0",
    "@wrtnlabs/eslint-config": "^0.4.3",
    "commander": "^13.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^15.5.1",
    "publint": "^0.3.10",
    "simple-git-hooks": "^2.12.1",
    "std-env": "^3.9.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
